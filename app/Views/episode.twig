<!DOCTYPE html>
<html>
<head>
    <title>Rick and Morty Episodes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            height: 100vh;
        }

        h1 {
            color: #0088cc;
            margin-top: 20px;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 20px 0;
            text-align: center;
        }

        .episode-button {
            background-color: #0088cc;
            color: #fff;
            width: 200px; /* Fixed width for all buttons */
            padding: 10px 0;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s ease-in-out;
            display: block;
            margin: 0 auto;
        }

        .episode-button:hover {
            background-color: #005580;
        }

        .episode-details {
            display: none;
        }

        .episode-container.open .episode-details {
            display: block;
        }
    </style>
</head>
<body>
<h1>Rick and Morty Episode Images</h1>

<ul>
    {% if episode is defined %}
        <li class="episode-container" onclick="toggleEpisodeDetails(this)">
            <button class="episode-button">{{ episode.name }}</button>
            <div class="episode-details">
                <strong>ID:</strong> {{ episode.id }}<br>
                <strong>Name:</strong> {{ episode.name }}<br>
                <strong>Date:</strong> {{ episode.air_date }}<br>
                <ul>
                    {% for episode in episode.episode %}
                        <li>{{ episode }}</li>
                    {% endfor %}
                </ul><br>
                <strong>Images</strong><br>
                {% for characterImage in episode.characterImg %}
                    <img src="{{ characterImage }}" alt="{{ episode.name }} Character Image">
                {% endfor %}
            </div>
        </li>
    {% endif %}
</ul>

<script>
    function toggleEpisodeDetails(element) {
        element.classList.toggle("open");
    }
</script>
</body>
</html>
